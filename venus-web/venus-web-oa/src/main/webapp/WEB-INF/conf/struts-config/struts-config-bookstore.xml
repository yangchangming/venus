<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

	<action-mappings>
		
		<action type="udp.template.bookstore.action.BookStoreAction" scope="request" path="/BookStore" parameter="cmd">
			<forward name="bookList" path="/jsp/venusPage/bookstore/bookList.jsp"  />
			<forward name="cartInSession" path="/jsp/venusPage/bookstore/cartItemList.jsp" />
			<forward name="logon" path="/jsp/venusPage/bookstore/logon.jsp" />
			<forward name="queryAllBooks" path="/BookStore.do?cmd=queryAllBooks" />
			<forward name="initOrder" path="/jsp/venusPage/bookstore/initOrder.jsp" />
			<forward name="listOrders" path="/jsp/venusPage/bookstore/orderList.jsp"  />
			<forward name="orderDetail" path="/jsp/venusPage/bookstore/orderDetail.jsp"  />
			<forward name="listOrderAction" path="/BookStore.do?cmd=listOrder" />
		</action>

	</action-mappings>
	<message-resources parameter="ApplicationResources" />

</struts-config>