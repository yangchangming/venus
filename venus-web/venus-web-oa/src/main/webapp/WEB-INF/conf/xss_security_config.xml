<?xml version="1.0" encoding="UTF-8"?>
<XSSConfig>
    <!-- 是否进行header校验 -->
    <isCheckHeader>false</isCheckHeader>
    <!-- 是否进行parameter校验 -->
    <isCheckParameter>true</isCheckParameter>
    <!-- 是否记录攻击日志 -->
    <isLog>true</isLog>
    <!-- 是否拦截攻击内容 -->
    <isChain>true</isChain>
    <!-- 是否开启特殊字符替换 - 会替换掉整个匹配的字符串 -->
    <replace>true</replace>

    <!-- 是否开启特殊url校验 -->
    <isCheckUrl>true</isCheckUrl>
    <!-- 特殊URL检测，不使用通用正则匹配 -->
    <checkUrlList>
        <!-- 支持匹配多个或者零个正则 -->
        <!-- 不配置<regex>项表示该url被忽略，以下url为[记录注册功能]中填写的过滤条件，需忽略 -->
        <checkUrl>
            <url>auResource</url>
        </checkUrl>
    </checkUrlList>

    <!-- 通用URL正则 -->
    <regexList>
        <!-- 匹配危险攻击字符: '< >'  支持多正则匹配 ,必填项  -->
        <regex><![CDATA[.*[<|>|'|"].*]]></regex>
    </regexList>

</XSSConfig>
