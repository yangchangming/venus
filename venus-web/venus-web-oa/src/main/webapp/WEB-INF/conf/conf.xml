<?xml version="1.0" encoding="UTF-8"?>

<venus>

	<name-map>
		<alias class="venus.frames.mainframe.oid.OidMgr" name="oid-conf" />
	</name-map>

	<venus.frames.mainframe.util.Helper VALIDATE_AT_POPULATE="0" VALIDATE_AT_POPULATE_FROM_RESULTSET="0" IS_LOG_SQL_START_ENABLED="0" IS_LOG_SQL_END_ENABLED="0">
		<ConstantSetting className="venus.frames.mainframe.util.Helper" propertyName="DEFAULT_PAGE_SIZE" value="15" />
        <ConstantSetting className="venus.frames.mainframe.util.Helper" propertyName="THEME" value="default" />
		<ConstantSetting className="venus.frames.mainframe.util.Helper" propertyName="DEFAULT_UPLOAD_PATH" value="/WEB-INF/upload/" />
		<ConstantSetting className="venus.frames.mainframe.util.Helper" propertyName="SQL_FILTER" value="0" />
		
	</venus.frames.mainframe.util.Helper>

	<venus.frames.mainframe.util.PopulateUtil>
		<populatePlugin type="java.sql.Date->*" 
			plugin="venus.frames.mainframe.util.DatePopulatePlugin" />
		<populatePlugin type="java.sql.Timestamp->*" 
			plugin="venus.frames.mainframe.util.DatePopulatePlugin" />
		<populatePlugin type="*->java.sql.Timestamp" 
			plugin="venus.frames.mainframe.util.DatePopulatePlugin" />
		<populatePlugin type="*->java.util.Date"
			plugin="venus.frames.mainframe.util.DatePopulatePlugin" />
	</venus.frames.mainframe.util.PopulateUtil>

	<oid-conf SYSID="1099" TableCodeLen="4" 
		OidDMImpl="venus.frames.mainframe.oid.TableInfoDM4Xml" IsClient="0" />
	<!--oid-conf link="file://c:\oid-conf.xml"/-->

	<venus.frames.mainframe.oid.TableInfoDM 
		OidTableName="mf_oid" CodeCol="table_code" NameCol="table_name" OidCol="oid_name" DBSrcCol="src_name" />

	<venus.frames.mainframe.oid.TableInfoDM4Xml link="frmConf://oid.xml" />

	<venus.frames.mainframe.log.LogMgr ImplName="venus.frames.mainframe.log.Log4jImpl" />

	<venus.frames.mainframe.context.ContextMgr 
		ImplName="venus.frames.mainframe.context.DefaultConextImpl" />
	<!-- for Cluster: venus.frames.mainframe.context.ClusterContextImpl
		for Common: venus.frames.mainframe.context.DefaultConextImpl -->

	<venus.frames.mainframe.ncache.CacheFactory 
		cacheMgrImplName="venus.frames.mainframe.ncache.impl.UdpCacheManager" />

	<venus.frames.mainframe.taskmgr.ServiceKeeper Port="10020">
		<startup name="venus.frames.mainframe.oid.OidMgr" />
	</venus.frames.mainframe.taskmgr.ServiceKeeper>

	<venus.frames.mainframe.db.conpool.ConnectionHelper link="frmConf://db.xml" />

	<venus.frames.util.exception.GlobalExceptionHandlerWithMessageAgent MassageStyle="ALERT_AND_BACK"  DisplayRealError="1"/>

	<!--<venus.frames.mainframe.action.OperationHintUtil link="frmConf://OperationHint.xml" />-->

	<!-- DefaultProfileSizeForCache: 1 forCluster -1 forCommon -->
	<venus.frames.mainframe.currentlogin.ProfileMgr DefaultProfileLifeTime="0" 
		DefaultProfileSizeForCache="-1" setPath="0" setAction="0" CreateProfilePerRequest="0" isSessionListener="1">
		<plugins>
			<plugin name="venus.frames.mainframe.currentlogin.DefaultSysWebProfile" loc="WEB_CONTEXT_KEY" who="0" />
			<plugin name="venus.frames.mainframe.currentlogin.DefaultSysAppProfile" loc="WEB_CONTEXT_KEY" who="1" />
		</plugins>
		<listeners>
			<!--listener name="venus.frames.mainframe.actionevent.action.DefaultActionListener" loc="WEB_CONTEXT_KEY"/>
				<listener name="venus.frames.mainframe.actionevent.bs.DefaultActionBSListener" loc="APP_CONTEXT_KEY"/-->
		</listeners>
	</venus.frames.mainframe.currentlogin.ProfileMgr>

	<venus.frames.mainframe.actionevent.bs.ActionEventBS>
		<plugin name="venus.frames.mainframe.actionevent.bs.DefaultActionEventBSPlugIn" type="0" />
		<plugin name="venus.frames.mainframe.actionevent.bs.DefaultPathEventBSPlugIn" type="1" />
	</venus.frames.mainframe.actionevent.bs.ActionEventBS>

</venus>
