<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="udp.ewp.template.model.EwpTemplate" table="ewp_template">
    <id name="id" column="ID" type="java.lang.String" length="19">
      <generator class="assigned"/>
    </id>
    <version name="version" column="VERSION" type="long" />
	<property name="template_name" column="TEMPLATE_NAME" type="java.lang.String" length="100"/>
	<property name="template_viewname" column="TEMPLATE_VIEWNAME" type="java.lang.String" length="200"/>
	<property name="template_type" column="TEMPLATE_TYPE" type="java.lang.String" length="1000"/>
	<property name="isSystem" column="ISSYSTEM" type="java.lang.String" length="10"/>
	<property name="isDefault" column="ISDEFAULT" type="java.lang.String" length="1"/>
	 <many-to-one column="SITE_ID" name="webSite" class="udp.ewp.website.model.Website"></many-to-one>
	<property name="create_date"  column="CREATE_DATE"  type="java.sql.Timestamp" />
	<property name="modify_date"  column="MODIFY_DATE"  type="java.sql.Timestamp" />

    <!--oracle-->
    <property name="template_content" column="TEMPLATE_CONTENT" type="org.springframework.orm.hibernate3.support.ClobStringType" length="1048576000"/>
    <!--mysql/sqlserver/db2-->
    <!--
    <property name="template_content" column="TEMPLATE_CONTENT" type="java.lang.String"/>
    -->
</class>
</hibernate-mapping>
